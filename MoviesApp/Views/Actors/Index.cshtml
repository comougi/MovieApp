@using System.Linq
@model IEnumerable<MoviesApp.ViewModels.ActorViewModel> 

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New Actor</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>
            <label asp-for="@Model.First().Firstname"></label>
        </th>
        <th>
            <label asp-for="@Model.First().Lastname"></label>
        </th>
        <th>
            <label asp-for="@Model.First().Birthdate"></label>
        </th>
        <th>
            <label>Filmorgaphy: </label>
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.Firstname
            </td>
            <td>
                @item.Lastname
            </td>
            <td>
                @item.Birthdate.ToString("dd.MM.yyyy")
            </td>
            <td>
                @foreach (var element in item.ActorFilmography)
                            {
                                @element.Movie.Title
                                <label>, </label>
                            }
            </td>
            
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit actor</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Actor's details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete actor</a>
            </td>
        </tr>
    }
    </tbody>
</table>